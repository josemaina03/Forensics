   "source": [
    "import pyttsx3\n",
    "\n",
    "def text_to_speech(text):\n",
    "    engine = pyttsx3.init()\n",
    "    engine.say(text)\n",
    "    engine.runAndWait()\n",
    "\n",
    "# Example usage:\n",
    "text = input(\"Enter the text to convert to speech: \")\n",
    "text_to_speech(text)\n"
